{
  "name": "planning-poker",
  "version": "0.1.0",
  "description": "Planning Poker WebApp",
  "main": "server/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/app.js",
    "postinstall": "npm run build",
    "dev": "cross-env NODE_ENV=development nodemon server/main.js -e js,pug,json,jsx --watch server",
    "build": "npm run clean-build && npm run build-client && npm run build-server",
    "build-server": "cross-env NODE_ENV=production webpack --config ./webpack.prod.server.js",
    "build-client": "cross-env NODE_ENV=production webpack --config ./webpack.prod.client.js",
    "clean-build": "trash build/ && mkdir build",
    "lint": "eslint ./**/*.{js,jsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/projeto-spider/planning-poker.git"
  },
  "keywords": [
    "planning",
    "poker",
    "scrum",
    "webapp"
  ],
  "author": "lubien <lubien1996@gmai.com> (http://lubien.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/projeto-spider/planning-poker/issues"
  },
  "homepage": "https://github.com/projeto-spider/planning-poker#readme",
