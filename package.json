    "babel-plugin-module-alias": "^1.4.0",
    "babel-plugin-resolver": "0.0.7",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.25.0",
    "dotenv": "^2.0.0",
    "flexboxgrid": "^6.3.1",
    "got": "^6.5.0",
    "ignore-styles": "^5.0.1",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
